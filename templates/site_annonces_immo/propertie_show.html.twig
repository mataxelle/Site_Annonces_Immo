{% extends "base.html.twig" %}

{% block title %}{{ propertie.title }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col s12 m12 l8 offset-l2">
			    <div class="card">
                    <div class="card-content">
					    <h2 class="card-title #00bcd4 cyan-text">{{ propertie.title }}</h2>
				        <img src="{{ asset('uploads/' ~ propertie.image) }}" alt="Dessin d'une maison" class="responsive-img" />
						<p>Description :</p><br>
						<p>{{ propertie.description }}</p>
						<div class="card-action">
						    <a class="btn" href="{{ path('propertie_edit', {'id' : propertie.id}) }}">Modifier</a>
	                        <a class="btn">Supprimer</a>
						</div>
					</div>	
				</div>
			</div>
		</div>	
	</div>
{% endblock %}