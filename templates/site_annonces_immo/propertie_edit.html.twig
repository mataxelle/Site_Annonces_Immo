{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('./assets/css/propertie_form.css') }}">
{% endblock %}

{% block title %}Modifier{% endblock %}

{% block body %}
    <div class="container">
		<div class="row">
			<div class="col s12 m12 l8 offset-l2">
				<h1 class="center">Modifier : {{ propertie.title }}</h1>
				{% if propertie.image is not null %}
                    <img width="300" src="{{ asset('uploads/' ~ propertie.image) }}">
                {% endif %}
			</div>
		</div>

		{% include "includes/propertie_form.html.twig" %}
	</div>
{% endblock %}