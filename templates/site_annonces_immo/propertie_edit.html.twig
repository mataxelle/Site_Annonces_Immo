{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Modifier{% endblock %}

{% block body %}
    <div class="container">
	    {% if propertie in app.user.properties %}
	        <h1 class="form_title center">Modifier : {{ propertie.title }}</h1>

		    <div class="row">
			    <div class="col s12 m12 l8 offset-l2">
				    {% if propertie.image is not null %}
                    <img width="300" src="{{ asset('uploads/' ~ propertie.image) }}">
                    {% endif %}
			    </div>
		    </div>

		    {% include "includes/propertie_form.html.twig" %}

	    {% else %}
            <div class="row">
	            <div class="col s12 center bold">
	                <a href="{{ path('home') }}">Vous n'êtes pas autoriser à modifier cette annonce, donc je vous prie de retourner vers la page d'accueil !</a>
		        </div>	
	        </div>	
	    {% endif %}
	</div>
{% endblock %}